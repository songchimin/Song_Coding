<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/certification_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="챌린지명 >"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/certification_item_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="2019.11.28 - 12.08" />

            <TextView
                android:id="@+id/certification_item_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="월, 화, 수, 목, 금" />

            <TextView
                android:id="@+id/certification_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="07:00 ~ 19:00" />

            <TextView
                android:id="@+id/certification_item_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="달성률 : 0.0%" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/certificate_item_frame"
            android:layout_width="140dp"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/certification_item_back_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fui_buttonShadow"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/certification_item_over_imageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <TextView
                    android:id="@+id/certification_item_over_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="인증하기"
                    android:textColor="@color/browser_actions_bg_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>