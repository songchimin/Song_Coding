<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feed_map_item_profile_imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/mypage_profile_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feed_map_item_email_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email@email"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/feed_map_item_date_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="2019.11.29" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feed_map_item_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하루 한 번 하늘보기"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/feed_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <ImageView
            android:id="@+id/feed_main_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@null" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/feed_map_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/feed_map_item_like_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/feed_like_check"
                app:srcCompat="@null" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_map_item_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/feed_map_item_message_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/main_message_btn" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView25s43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/feed_map_item_etc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/certification_notify_btn" />
    </LinearLayout>

    <TextView
        android:id="@+id/feed_map_item_likeCount_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="좋아요 1개"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/feed_map_item_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="내용"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/feed_map_item_commentCount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="댓글 1개 모두보기"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feed_item_myprofile_imageView"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/mypage_profile_image" />

        <EditText
            android:id="@+id/feed_item_comment_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="댓글입력..."
            android:inputType="textPersonName"
            android:textColor="@color/browser_actions_title_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/feed_item_comment_submit_btn"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:background="@null"
            android:text="게시"
            android:textColor="#FF5D5D" />
    </LinearLayout>

</LinearLayout>