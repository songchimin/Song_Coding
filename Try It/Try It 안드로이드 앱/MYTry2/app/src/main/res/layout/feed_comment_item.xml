<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challenge_item2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:padding="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/challenge_comment_item_profile_imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/main_default_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/public_comment_username2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="댓글 내용"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/public_comment_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email@email"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/public_comment_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2019.11.28 15:00"
            android:textAlignment="viewStart"
            android:textSize="10sp" />

    </LinearLayout>

    <Button
        android:id="@+id/public_comment_good2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginRight="3dp"
        android:background="@drawable/like_false" />

    <TextView
        android:id="@+id/public_comment_good_count2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0" />

</LinearLayout>